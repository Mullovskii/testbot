              = link_to 'Destroy',  act,  method: :delete, data: { confirm: 'Are you sure?' } 
      
      = form_for @act do |f|
        .field
          = f.label "Бот отреагирует"
          = f.text_field :bot_say
          = f.hidden_field :intent, value: "start_talk_intent"
          = f.hidden_field :bot_id, value: @bot.id
