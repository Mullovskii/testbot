= form_for @schedule do |f|
  - if @schedule.errors.any?
    #error_explanation
      %h2= "#{pluralize(@schedule.errors.count, "error")} prohibited this schedule from being saved:"
      %ul
        - @schedule.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :bot
    = f.text_field :bot
  .field
    = f.label :lesson
    = f.text_field :lesson
  .field
    = f.label :time
    = f.time_select :time
  .field
    = f.label :repeat
    = f.check_box :repeat
  .field
    = f.label :repeat_daily
    = f.check_box :repeat_daily
  .field
    = f.label :remind_over
    = f.number_field :remind_over
  .field
    = f.label :sunday
    = f.check_box :sunday
  .field
    = f.label :monday
    = f.check_box :monday
  .field
    = f.label :tuesday
    = f.check_box :tuesday
  .field
    = f.label :wednesday
    = f.check_box :wednesday
  .field
    = f.label :thursday
    = f.check_box :thursday
  .field
    = f.label :friday
    = f.check_box :friday
  .field
    = f.label :saturday
    = f.check_box :saturday
  .actions
    = f.submit 'Save'
