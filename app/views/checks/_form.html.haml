  - if @check.errors.any?
    #error_explanation
      %h2= "#{pluralize(@check.errors.count, "error")} prohibited this check from being saved:"
      %ul
        - @check.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :bot
    = f.text_field :bot
  .field
    = f.label :lesson
    = f.text_field :lesson
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :key
    = f.text_field :key
  .field
    = f.label :intent
    = f.text_field :intent
  .actions
    = f.submit 'Save'
