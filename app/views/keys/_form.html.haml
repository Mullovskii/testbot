= form_for @key do |f|
  - if @key.errors.any?
    #error_explanation
      %h2= "#{pluralize(@key.errors.count, "error")} prohibited this key from being saved:"
      %ul
        - @key.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_say
    = f.text_field :user_say
  .field
    = f.label :bot_id
    = f.text_field :bot_id
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
